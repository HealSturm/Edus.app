@using Edus.Share.Model
@using MudBlazor

@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Editar Medicamento</MudText>

        <MudTextField Label="Descripción" Variant="Variant.Outlined" @bind-Value="Medicina.Descripcion" />
        <MudTextField Label="Presentación" Variant="Variant.Outlined" @bind-Value="Medicina.Presentacion" />
        <MudTextField Label="Marca" Variant="Variant.Outlined" @bind-Value="Medicina.Marca" />
        <MudTextField Label="Indicaciones" Variant="Variant.Outlined" @bind-Value="Medicina.Indicaciones" />
        <MudTextField Label="Estado" Variant="Variant.Outlined" @bind-Value="Medicina.Estado" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancelar">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Guardar">Guardar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }
    [Parameter] public cMedicamento Medicina { get; set; }

    private void Cancelar() => MudDialog.Cancel();

    private void Guardar()
    {
        Snackbar.Add($"Guardado: {Medicina.Descripcion}", Severity.Success);
        MudDialog.Close(DialogResult.Ok(Medicina));
    }
}
